{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "pdf-reader": {
      "type": "local",
      "enabled": true,
      "command": ["bunx", "@sylphx/pdf-reader-mcp"]
    }
  },
  "lsp": {
    "rumdl": {
      "command": ["rumdl", "server"],
      "extensions": [".md"]
    },
    "ltex-plus": {
      "command": ["ltex-ls-plus", "."],
      "extensions": [".md", ".txt", ".tex"],
      "initialization": {
        "ltex": {
          "language": "fr-FR",
        }
      }
    }
  },
  "permission": {
    "pdf-reader_*": "allow"
  }
}
